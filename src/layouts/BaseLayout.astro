---
import { SEO } from "astro-seo";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ThemeToggle from "../components/ThemeToggle.astro";

const url = new URL(Astro.url.pathname, Astro.site).toString();
---

<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title="Alberto Meunier"
      description="A passionate software engineer with expertise in embedded systems, PCB design, and robotics."
      openGraph={{
        basic: {
          url: url,
          title: "Alberto Meunier",
          type: "website",
          image: "/profile.png",
        },
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
      }}
    />
    <title>Alberto Meunier</title>
  </head>
  <Header />
  <body class="flex flex-col min-h-screen">
    <ThemeToggle />
    <main class="mx-auto max-w-5xl">
      <hr />
      <slot />
    </main>
  </body>
  <Footer />
</html>
